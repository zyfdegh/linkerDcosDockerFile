{
	"id": "/linkerdns",
	"groups": [
	{
		"id": "lb",
		"apps": [{
			"id": "marathonlb",
			"container": {
				"type": "DOCKER",
				"docker": {
					"image": "linkerrepository/linker_marathon_lb:1.0.0",
					"privileged": true,
					"network": "HOST"
				}
			},
			"instances": 3,
			"cpus": 0.1,
			"mem": 512,
			"acceptedResourceRoles":["slave_public"],
			"args": [
				"sse",
				"-m",
				"http://master.mesos:8080",
				"--group",
				"linkermgmt",
				"--dont-bind-http-https"
			]
		}]
	}]
}